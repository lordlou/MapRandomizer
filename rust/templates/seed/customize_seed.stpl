<html>
<head>
<% include!("../common/header.stpl"); %>
<style> 
input[type=submit] {
padding: 12px 12px;
box-sizing: border-box;
}
</style>
</head>
<body>
<% include!("../common/navbar.stpl"); %>

<script>
window.unlockedTimestampString = "<%- unlocked_timestamp_str %>";
window.spoilerTokenPrefix = "<%- spoiler_token_prefix %>";
</script>

<div class="container">
    <div class="row my-2">
        <div class="col-xl-9 mx-auto">
            <div class="container my-2">
                <%- seed_header %>
            </div>

            <div class="container my-2">
                <div class="card">
                    <div class="card-header">Customization</div>
                    <form id="customization-form" class="card-body container" method="POST" enctype="multipart/form-data" action="customize" onchange="saveForm(this)">
                        <div class="form-group row my-3">
                            <div class="col-sm-4">
                            <label class="col-form-label" for="room_palettes">Room palettes</label>
                            </div>
                            <div class="col-sm-4 btn-group" role="group">
                                <input type="radio" class="btn-check" name="room_palettes" id="roomPalettesVanilla" value="vanilla" checked>
                                <label class="btn btn-outline-primary" for="roomPalettesVanilla">Vanilla</label>
                                <input type="radio" class="btn-check" name="room_palettes" id="roomPalettesAreaThemed" value="area-themed">
                                <label class="btn btn-outline-primary" for="roomPalettesAreaThemed">Area-themed</label>
                            </div>
                        </div>

                        <div class="form-group row my-3">
                            <div class="col-sm-4">
                            <label class="col-form-label" for="disable_music">Disable music</label>
                            </div>
                            <div class="col-sm-4 btn-group" role="group">
                                <input type="radio" class="btn-check" name="disable_music" id="disableMusicNo" value=false checked>
                                <label class="btn btn-outline-primary" for="disableMusicNo">No</label>
                                <input type="radio" class="btn-check" name="disable_music" id="disableMusicYes" value=true>
                                <label class="btn btn-outline-primary" for="disableMusicYes">Yes</label>
                            </div>
                        </div>

                        <div class="form-group row my-3">
                            <div class="col-sm-4">
                            <label class="col-form-label" for="disable_beeping">Disable low-energy beeping</label>
                            </div>
                            <div class="col-sm-4 btn-group" role="group">
                                <input type="radio" class="btn-check" name="disable_beeping" id="disableBeepingNo" value="false" checked>
                                <label class="btn btn-outline-primary" for="disableBeepingNo">No</label>
                                <input type="radio" class="btn-check" name="disable_beeping" id="disableBeepingYes" value="true">
                                <label class="btn btn-outline-primary" for="disableBeepingYes">Yes</label>
                            </div>
                        </div>

                        <div class="form-group row my-3">
                            <label class="col-sm-4 col-form-label" for="rom">Base ROM</label>
                            <input class="col-sm-8 form-control-file" type="file" id="baseRom" name="rom"
                            onchange="saveROM(this, 'base')">
                        </div>
                        <input type="submit" class="btn btn-primary" value="Download ROM" />
                    </form>
                </div>
            </div>
            <div class="container my-2">
                <%- seed_footer %>
            </div>

        </div>
    </div>
</div>

<% include!("../common/save_load_rom.stpl"); %>
<% include!("../common/save_settings.stpl"); %>
<script>
loadROM(document.getElementById("baseRom"), 'base');
loadForm(document.getElementById("customization-form"));
</script>

</body>
</html>
